# Configurações do Sistema Skyline A3
# Copie este arquivo para .env e preencha com seus valores

# Segurança
JWT_SECRET_KEY=sua-chave-super-secreta-aqui-mude-em-producao

# Servidor
FLASK_ENV=development
FLASK_DEBUG=True
HOST=0.0.0.0
PORT=5000

# Banco de Dados
DATABASE_PATH=backend/database/iot_system.db

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=catraca/acesso
MQTT_USERNAME=
MQTT_PASSWORD=

# Wake-on-LAN
WOL_BROADCAST_IP=255.255.255.255
WOL_PORT=9

# Shutdown Remoto
SHUTDOWN_TIMEOUT=30
PSEXEC_PATH=C:\Tools\PsExec.exe
